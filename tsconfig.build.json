{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler", // critical for ESM resolution
    "jsx": "react-jsx",
    "declaration": true,
    "noImplicitAny": false,

    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "baseUrl": "src", // so @lib/* works
    "paths": {
      "@lib/*": ["./*"]
    },
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
